# Loading helper functions
source "$FRESH_LOCAL"/lib/functions.sh

# handles updating fresh
fresh freshshell/fresh bin/fresh --bin

if test -n "$BASH_VERSION"; then
  fresh freshshell/fresh contrib/source-build.sh --file=~/.bashrc
  fresh bash/bash_profile --file
  fresh bash/aliases/\*
  fresh bash/config/\*
fi

if _installed git; then
  _include "git/setup.sh"
  local __git_config=~/.gitconfig.local
  GIT_CONFIG="$__git_config" _git_setup
  
  fresh git/gitconfig --file
  fresh git/gitignore.global --file
fi

# OS X setup
_include "osx/*.sh"
